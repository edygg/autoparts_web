<div class="container-fluid">
	<div class="col-md-8 col-md-offset-2 signup-container">
		<h2>Registro de nuevo usuario</h2>

		<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-horizontal') do |f| %>
		  <%= devise_error_messages! %>

		  <div class="form-group">
		  	<%= f.label :email, class: "control-label col-sm-5" %>
		  	<div class="col-sm-7">
		  		<%= f.email_field :email, autofocus: true, class: 'form-control' %>
		  	</div>
		  </div>
		  <div class="form-group">
		  	<%= f.label :password, 'Contraseña', class: 'control-label col-sm-5' %>
		  	<div class="col-sm-7">
		  		<%= f.password_field :password, class: 'form-control' %>
		  	</div>
		  </div>
		  <div class="form-group">
		  	<%= f.label :password_confirmation, 'Vuelva a escribir la contraseña', class: 'control-label col-sm-5' %>
		  	<div class="col-sm-7">
		  		<%= f.password_field :password_confirmation, class: 'form-control' %>
		  	</div>
		  </div>
		  <div><%= f.submit "Sign up" %></div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>
