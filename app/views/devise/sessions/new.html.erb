<div class="container-fluid">
	<div class="col-md-8 col-md-offset-2 login-container">
		<div class="col-sm-6">
			<!-- Aqui va el logo de la empresa -->
			<%= image_tag '250x250.png' %>
		</div>

		<div class="col-sm-6">
			<h2>Autenticación</h2>

			<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal') do |f| %>
			  <div class="form-group">
			  	<%= f.label :email, class: 'control-label col-sm-4' %>
			  	<div class="col-sm-8">
			  		<%= f.email_field :email, autofocus: true, class: 'form-control' %>
			  	</div>
			  </div>
			
			  <div class="form-group">
			  	<%= f.label :password, 'Contraseña', class: 'control-label col-sm-4' %>
			  	<div class="col-sm-8">
			  		<%= f.password_field :password, class: 'form-control' %>
			  	</div>
			  </div>
			  <br>
			  <% if devise_mapping.rememberable? -%>
			    <div class="checkbox"><%= f.check_box :remember_me %> <%= f.label :remember_me, "Recuerda mi usuario" %></div>
			  <% end -%>

			  <div><%= f.submit "Entrar", class: 'btn btn-success' %></div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>