<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <h1>Lista de repuestos</h1>

    <%= render 'search_form' %>

    <br>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Precio de venta</th>
          <th>Unidades disponibles</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @replacements.each do |replacement| %>
          <tr class="remove-row">
            <td><%= replacement.name %></td>
            <td><%= number_to_currency replacement.sale_price, unit: 'L.' %></td>
            <td><%= replacement.units_in_stock %></td>
            <td><%= link_to 'Mostrar más información', replacement, class: "btn btn-sm btn-info" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nuevo repuesto', new_replacement_path, class: "btn btn-success" %>
  </div>
</div>