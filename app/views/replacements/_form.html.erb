<%= form_for(@replacement) do |f| %>
  <% if @replacement.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <strong><%= pluralize(@replacement.errors.count, "error") %> prohibited this replacement from being saved:</strong>

      <ul>
      <% @replacement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Nombre", class: "control-label col-sm-4" %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sale_price, "Precio de venta", class: "control-label col-sm-4" %>
    <div class="col-sm-8">
      <%= f.text_field :sale_price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :purchase_price, "Precio de compra", class: "control-label col-sm-4" %>
    <div class="col-sm-8">
      <%= f.text_field :purchase_price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :units_in_stock, "Unidades disponibles", class: "control-label col-sm-4" %>
    <div class="col-sm-8">
      <%= f.number_field :units_in_stock, class: "form-control" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
